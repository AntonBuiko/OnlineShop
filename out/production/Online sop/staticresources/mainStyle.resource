/* mainStyle */

.productBlock{
    position: relative;
    height: 400px;
    width: 400px;
    background-color: #fafaf9;
}

.hiddenProduct {
    position: absolute;
    top: 50%;
    left: 50%;
    margin-right: -50%;
    transform: translate(-50%, -50%) }
    visibility: hidden;
}

.productName{
    text-align:center;
    font-size: 20px;
}

.productPrice{
    text-align: center;
    font-size: 30px;
}

.productButton{
    display: flex;
    width: 100%;
    text-align: center;
}